@model IEnumerable<QLTimViecLamSinhVien.Models.Job>

@{
    ViewData["Title"] = "Kết quả tìm kiếm";
}

<h1>Kết quả tìm kiếm</h1>

@if (!Model.Any())
{
    <p>Không tìm thấy công việc phù hợp.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Tiêu đề</th>
                <th>Mô tả</th>
                <th>Vị trí</th>
                <th>Lương</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                <tr>
                    <td>@job.Title</td>
                    <td>@job.Description</td>
                    <td>@job.Location</td>
                    <td>@(job.Salary.HasValue ? job.Salary.Value.ToString("N0") : "Thỏa thuận")</td>
                    <td>
                        <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.JobId" class="btn btn-info btn-sm">
                            Xem
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
